@ARTICLE{Schmid1974,
  author = {Schmid, Hellmut H.},
  title = {Worldwide geometric satellite triangulation},
  journal = {Journal of Geophysical Research},
  year = {1974},
  volume = {79},
  pages = {5349--5376},
  number = {35},
  month = {December},
  abstract = {By applying the method of geometric satellite triangulation, the three-dimensional
	positions of 45 stations distributed around the world were determined
	with an average positional mean error of plus or minus 4.5 m. Error
	theoretical investigations indicate that the result, derived in principle
	by interpolation into the astronomical right ascension-declination
	system, is essentially free of significant systematic errors. A comparison
	of this result of the geometric method with the corresponding result
	obtained by dynamic satellite geodesy from Doppler data show excellent
	overall agreement. A combination solution that fully respects the
	covariance of the photogrammetrically derived directions leads to
	mass-centered station positions with an average positional mean error
	of plus or minus 3.7 m. The scale of the system, determined by several
	scalars measured on the earth's surface, suggests an equatorial radius
	for a best-fitting ellipsoid of 6.378,130 m.},
  doi = {10.1029/JB079i035p05349},
  keywords = {triangulation; tracking; wireless; satellite;},
  owner = {acrandal},
  timestamp = {2010.09.21}
