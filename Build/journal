@MISC{linux:box,
  author = {Linux Devices},
  title = {Tiny WiFi-enabled Linux box boots in 1.1 seconds},
  howpublished = {http://www.linuxdevices.com/news/NS6252722644.html},
  month = {October},
  year = {2006},
  abstract = {Last month, Technologic announced that its earlier TS-7300 board could
	boot Linux in 1.69 seconds, loading an initrd kernel and read-only
	NAND flash filesystem, before executing a shell. Such speed is especially
	useful in solar-powered remote sensing applications, where the board
	might only need to awaken once every five minutes to read a few sensors,
	before falling asleep again. "Even at 1.69 seconds, 99 percent of
	your power was spent by Linux and firmware bootup boilerplate, and
	not your code," Technologic spokesperson Ronald Gomes said at the
	time.
	
	
	Now, the company has shipped a new hardware platform -- the TS-7400
	-- that can boot even faster, thanks to a hardware-accelerated NAND
	controller and hardware ECC (error checking/correction) unit, it
	says. The TS-7400 is also smaller and less expensive than the earlier
	TS-7300, by virtue of a "system-on-module" design.},
  url = {http://www.linuxdevices.com/news/NS6252722644.html}
}

