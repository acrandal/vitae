@INPROCEEDINGS{Bargh2008,
  author = {Bargh, Mortaza S. and de Groote, Robert},
  title = {Indoor localization based on response rate of {Bluetooth} inquiries},
  booktitle = {Proceedings of the ACM International Workshop on Mobile Entity Localization
