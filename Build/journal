@ARTICLE{Liu2009,
  author = {Jia Liu and Xiaofeng Tong and Wenlong Li and Tao Wang and Yimin Zhang
	and Hongqi Wang},
  title = {Automatic player detection, labeling and tracking in broadcast soccer
	video},
  journal = {Pattern Recognition Letters},
  year = {2009},
  volume = {30},
  pages = {103--113},
  number = {2},
  month = {January},
  abstract = {Most of the track fusion work documented in the literature involves
	a post-processing, batch approach to track-to-track association.
	Also, it is generally assumed that, due to bandwidth constraints,
	sensor contacts are unavailable to the track fusion system. Our work
	differs in that we develop a real-time, recursive approach to the
	track fusion problem. Further, our algorithm was developed for a
	centralized architecture, so that sensor data is available to the
	track fuser, allowing for improved track fusion performance. While
	the algorithm can be readily modified to operate in decentralized
	settings when bandwidth constraints are such that sensor contacts
	are unavailable to the track fuser, our work motivates a hierarchical,
	multi-stage approach to data fusion even in centralized settings.
	This is particularly useful when sensor revisit rates vary greatly.
	
	
	Our track fusion algorithm uses an efficient linear programming-based
	approach to data association and a customized version of the interacting
	multiple model (IMM) filter with precise calculations for model transition
	probabilities and for model-to-model filter predictions. Data association
	is based on kinematic as well as classification information. We present
	results based on ground target scenarios with move-stop-move targets,
	with target contacts originating from radar data (GMTI and SAR),
	electro-optical imagery, signal intelligence, and acoustic and seismic
	unattended ground sensors (UGS).},
  doi = {10.1016/j.patrec.2008.02.011},
  file = {Liu2009.pdf:Liu2009.pdf:PDF},
  keywords = {Sensor fusion; Multi-sensor multi-target tracking; Multiple-model
	filtering; Track fusion; Distributed tracking; Move-stop-move tracking;
	tracklets; video; camera;}
}

