@ARTICLE{Schmitter-Edgecombe2011,
  author = {Schmitter-Edgecombe,Maureen and Parsey,Carolyn and Cook,Diane J.},
  title = {Cognitive Correlates of Functional Performance in Older Adults: Comparison
	of Self-Report, Direct Observation, and Performance-Based Measures},
  journal = {Journal of the International Neuropsychological Society},
  year = {2011},
  volume = {17},
  pages = {1--12},
  number = {05},
  month = {August},
  abstract = {Neuropsychologists are often asked to answer questions about the effects
	of cognitive deficits on everyday functioning. This study examined
	the relationship between and the cognitive correlates of self-report,
	performance-based, and direct observation measures commonly used
	as proxy measures for everyday functioning. Participants were 88
	community-dwelling, cognitively healthy older adults (age 50?86 years).
	Participants completed standardized neuropsychological tests and
	questionnaires, and performed eight activities of daily living (e.g.,
	water plants, fill a medication dispenser) while under direct observation
	in a campus apartment. All proxy measures of everyday function were
	sensitive to the effects of healthy cognitive aging. After controlling
	for age, cognitive predictors explained a unique amount of the variance
	for only the performance-based behavioral simulation measure (i.e.,
	Revised Observed Tasks of Daily Living). The self-report instrumental
	activities of daily living (IADL) and the performance-based everyday
	problem-solving test (i.e., EPT) did not correlate with each other;
	however, both were unique predictors of the direct observation measure.
	These findings suggest that neuropsychologists must be cautious in
	making predictions about the quality of everyday activity completion
	in cognitively healthy older adults from specific cognitive functions.
	The findings further suggest that a self-report of IADLs and the
	performance-based EPT may be useful measures for assessing everyday
	functional status in cognitively healthy older adults. (JINS, 2011,
	17, 853?864)},
  doi = {10.1017/S1355617711000865},
  eprint = {http://journals.cambridge.org/article_S1355617711000865},
  file = {Schmitter-Edgecombe2011.pdf:Schmitter-Edgecombe2011.pdf:PDF},
  keywords = {cognitive, psychology},
  owner = {acrandal},
  timestamp = {2012.07.11}
}

@INPROCEEDINGS{Schulz2001,
  author = {Schulz, Dick and Burgard, Wolfram and Fox, Dieter and Cremers, Armin
	B.},
  title = {Tracking multiple moving targets with a mobile robot using particle
	filters and statistical data association},
  booktitle = {Proceedings of the IEEE International Conference on Robotics and
	Automation},
  year = {2001},
  volume = {2},
  series = {ICRA '01},
  pages = {1665--1670},
  publisher = {IEEE},
  abstract = {One of the goals in the field of mobile robotics is the development
	of mobile platforms which operate in populated environments and offer
	various services to humans. For many tasks it is highly desirable
	that a robot can determine the positions of the humans in its surrounding.
	In this paper we present a method for tracking multiple moving objects
	with a mobile robot. We introduce a sample-based variant of joint
	probabilistic data association filters to track features originating
	from individual objects and to solve the correspondence problem between
	the detected features and the filters. In contrast to standard methods,
	occlusions are handled explicitly during data association. The technique
	has been implemented and tested on a real robot. Experiments carried
	out in a typical office environment show that the method is able
	to track multiple persons even when the trajectories of two people
	are crossing each other.},
  doi = {10.1109/ROBOT.2001.932850},
  file = {Schulz2001.pdf:Schulz2001.pdf:PDF},
  keywords = {feature extraction; joint probabilistic data association filters;
	laser ranging; mobile robot; multiple moving target tracking; occlusions;
	particle filter; state estimation; statistical data association;
	feature extraction; filtering theory; laser ranging; mobile robots;
	object recognition; probability; state estimation; target tracking;
	tracking},
  owner = {acrandal},
  timestamp = {2011.01.11}
}

@INPROCEEDINGS{Schulz2001a,
  author = {Schulz, Dirk and Burgard, Wolfram and Fox, Dieter and Cremers, Armin
	B.},
  title = {Tracking multiple moving objects with a mobile robot},
  booktitle = {Proceedings of the IEEE Computer Society Conference on Computer Vision
	and Pattern Recognition},
  year = {2001},
  volume = {1},
  series = {CVPR '01},
  pages = {371--377},
  address = {Los Alamitos, CA, USA},
  month = {December},
  publisher = {IEEE Computer Society},
  abstract = { One of the goals in the field of mobile robotics is the development
	of mobile platforms which operate in populated environments. For
	many tasks it is therefore highly desirable that a robot can determine
	the positions of the humans in its surrounding. We introduce sample-based
	joint probabilistic data association filters to track multiple moving
	objects with a mobile robot. Our technique uses the robot's sensors
	and a motion model of the objects being tracked. A Bayesian filtering
	technique is applied to adapt the tracking process to the number
	of objects in the sensor range of the robot. Our approach to tracking
	multiple moving objects has been implemented and tested on a real
	robot. We present experiments illustrating that our approach is able
	to robustly keep track of multiple persons even in situations in
	which people are temporarily occluded. The experiments furthermore
	show that the approach outperforms other techniques developed so
	far.},
  doi = {10.1109/CVPR.2001.990499},
  file = {Schulz2001a.pdf:Schulz2001a.pdf:PDF},
  keywords = {Bayesian filtering technique; mobile platforms; mobile robot; mobile
	robotics; motion model; multiple moving object tracking; multiple
	moving objects; populated environments; robot sensors; sample-based
	joint probabilistic data association filters; sensor range; tracking
	process; filters; image motion analysis; image sensors; mobile robots;
	robot vision; target tracking;},
  owner = {acrandal},
  timestamp = {2011.01.26}
